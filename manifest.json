{
    "manifest_version": 2,
    "name": "Browser Insight",
    "version": "1.0",
    "description": "A browser extension to log network requests and download them as a file.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "activeTab",
      "storage",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  